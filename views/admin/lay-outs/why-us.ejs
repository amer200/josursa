                <label class="form-label">قيمنا</label>
                <textarea class="form-control" placeholder="قيمنا" id="floatingTextarea"
                    name="princ"><%= whyus.princ %></textarea>
            </div>
            <input type="hidden" id="hide">
            <button type="submit" class="btn btn-dark" id="subBtn"> حفظ</button>
        </form>
    </ul>
</div>