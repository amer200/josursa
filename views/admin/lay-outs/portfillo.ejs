<div class="projects forms d-none" id="portfillo">
    <ul class="list-group">
        <h4>المشاريع المميزة</h4>
        <form action="/admin/home/add-portfillo" id="add-portfillo-form" method="post">
            <h4>اضف مشروع</h4>
            <div class="mb-3">
                <label class="form-label">الاسم</label>
                <input class="form-control" placeholder="الاسم" id="floatingTextarea" name="title" />
            </div>
            <div class="mb-3">
                <label class="form-label">المحتوى</label>
                <textarea class="form-control" placeholder="المحتوى" id="floatingTextarea" name="content"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">الصورة</label>
                <input class="form-control" placeholder="رابط الصورة" id="floatingTextarea" name="img" />
            </div>
            <input type="hidden" id="hide">
            <button type="submit" class="btn btn-dark" id="subBtn"> حفظ</button>
        </form>
        <% if(portfillo){ %>
            <% portfillo.forEach( p=> { %>
                <li class="list-group-item">
                    <h6>
                        <%= p.title%>
                    </h6>
                    <form action="/admin/home/delelte-portfillo/<%=p._id%>" method="post"><button type="button"
                            class="btn btn-danger" onclick="deleteHandeler(this)">حذف</button></form>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#id<%=p._id%>">
                        تعديل</button>
                    <%- include('portfillo-modal', {p:p})%>
                </li>
                <%})%>
                    <%}%>
    </ul>
</div>