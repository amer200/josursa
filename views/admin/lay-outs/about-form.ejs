<form action="/admin/home/about" id="about-form" method="post" class="forms d-none">
    <h4>من نحن</h4>
    <div class="mb-3">
        <label class="form-label">النص الاول</label>
        <textarea class="form-control" placeholder="النص الاول" id="floatingTextarea"
            name="title"> <%= aboutTitle %></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">النص الثاني</label>
        <textarea class="form-control" placeholder="النص الثاني" id="floatingTextarea"
            name="content"> <%= aboutContent %></textarea>
    </div>
    <input type="hidden" id="hide">
    <button type="submit" class="btn btn-dark" id="subBtn"> حفظ</button>
</form>